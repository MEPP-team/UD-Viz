{
  "name": "ud-viz-monorepo",
  "description": "Urban Data VIsualiZation framework",
  "scripts": {
    "clean": "rm -f -r node_modules && rm -f package-lock.json",
    "reset": "npm run clean && npm i",
    "travis": "npm run eslint && npm run build-core && npm run build-browser",
    "build-core": "npm run build --prefix ./packages/core",
    "build-browser": "npm run build --prefix ./packages/browser",
    "build-node": "npm run build --prefix ./packages/node",
    "build-website": "npm run build --prefix ./website && npm run build-browser && npm run docs",
    "eslint-quiet": "eslint --quiet --ignore-path .gitignore \"packages/**/*.js\" \"website/**/*.js\"",
    "eslint": "eslint --ignore-path .gitignore \"packages/**/*.js\" \"website/**/*.js\"",
    "eslint-fix": "eslint --ignore-path .gitignore \"packages/**/*.js\" \"website/**/*.js\" --fix",
    "docs": "jsdoc -c ./docs/jsdoc.json --verbose"
  },
  "workspaces": [
    "packages/*",
    "website"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VCityTeam/UD-Viz.git"
  },
  "license": "(LGPL-2.1)",
  "bugs": {
    "url": "https://github.com/VCityTeam/UD-Viz/issues"
  },
  "homepage": "https://github.com/VCityTeam/UD-Viz/",
  "devDependencies": {
    "jsdoc": "^3.6.7",
    "clean-jsdoc-theme": "^3.3.1",
    "child-process-promise": "^2.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-prettier": "^4.2.1",
    "css-loader": "^6.7.1",
    "style-loader": "^3.3.1",
    "nodemon": "^2.0.12",
    "prettier": "2.6.2",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  }
}
