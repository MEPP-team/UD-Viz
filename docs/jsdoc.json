{
  "plugins": [
    "plugins/markdown",
    "node_modules/jsdoc-tsimport-plugin/index.js"
  ],
  "source": {
    "include": [
      "packages/core/src",
      "packages/node/src",
      "packages/browser/src"
    ],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "sourceType": "module",
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": true,
    "search": true,
    "default": {
      "includeDate": true,
      "useLongnameInNav": false
    }
  },
  "opts": {
    "destination": "./docs/html",
    "tutorials": "./docs/static",
    "recurse": true,
    "readme": "./readme.md",
    "template": "node_modules/clean-jsdoc-theme",
    "theme_opts": {
      "theme": "light",
      "title": "UD-Viz",
      "footer": "Fork: <a href='https://github.com/VCityTeam/UD-Viz'>https://github.com/VCityTeam/UD-Viz</a>",
      "displayModuleHeader": true,
      "menu": [
        {
          "title": "Github",
          "id": "Github",
          "link": "https://github.com/VCityTeam/UD-Viz"
        },
        {
          "title": "Examples",
          "id": "Examples",
          "link": "https://ud-viz.vcityliris.data.alpha.grandlyon.com/"
        }
      ],
      "sections": ["Tutorials", "Classes", "Modules", "Global", "Namespaces"],
      "include_css": ["docs/custom.css"],
      "resizeable": {
        "navbar": {
          "min": "300",
          "max": "600"
        }
      }
    }
  },
  "tags": {
    "allowUnknownTags": ["optional"],
    "dictionaries": ["jsdoc", "closure"]
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  }
}
