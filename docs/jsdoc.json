{
    "plugins": [
        "plugins/markdown"
    ],
    "opts":{
        "destination":"./docs/html",
        "recurse":true,
        "verbose":true,
        "tutorials": "./docs/static",
        "readme":"./Readme.md",
        "template":"node_modules/clean-jsdoc-theme",
        "theme_opts":{
            "theme": "light",
            "title": "UD-Viz",
            "footer": "Fork: <a href='https://github.com/VCityTeam/UD-Viz'>https://github.com/VCityTeam/UD-Viz</a>",
            "menu": [
                {
                    "title": "Github",
                    "id": "Github",
                    "link": "https://github.com/VCityTeam/UD-Viz"
                },
                {
                    "title": "Examples",
                    "id": "Examples",
                    "link": "https://ud-viz.vcityliris.data.alpha.grandlyon.com/"
                }
            ],
            "sections": ["Menu","Tutorials","Classes", "Modules", "Global"]
        }
    },
    "source": {
        "include":["src"],
        "excludePattern": "(node_modules/|docs)"
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "search": true
    }
}
